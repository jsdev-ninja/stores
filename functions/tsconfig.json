{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"rootDir": "./src",
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"compileOnSave": true,
	"include": ["src"]
}
