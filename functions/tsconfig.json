{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"rootDir": "./src",
		"paths": {
			"src/*": ["./src/*"],
			"@jsdev_ninja/core": ["../packages/core/lib/index.tsx"]
		}
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": [
		"src/services/documents/dev-preview",
		"src/services/documents/dev-preview/**/*",
		"src/services/documents/dist/**/*",
		"**/dev-preview/**/*",
		"**/dist/dev-preview*",
		"node_modules"
	],
	"references": [{ "path": "../packages/core/tsconfig.app.json" }],
	"composite": true
}
