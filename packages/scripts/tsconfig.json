{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
