{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["lib", "dist"],
	"exclude": ["node_modules", "src", "vite.config.ts"]
}
